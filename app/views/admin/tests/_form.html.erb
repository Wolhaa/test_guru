<%= test_header(test) %>

<%= render 'shared/errors', resource: test %>

<%= form_with model: [:admin, @test], local: true do |form| %>
  <%= form.label :title %>
  <%= form.text_field :title %><br>

  <%= form.label :category_id %>
  <%= form.collection_select :category_id, Category.all, :id, :title, prompt: true %><br>
  <%= form.label :user_id %>
  <%= form.collection_select :user_id, User.all, :id, :email, prompt: true %><br>

  <%= form.submit %>
<% end %>

<%= link_to t('.back'), admin_tests_path %>
